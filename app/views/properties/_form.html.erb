<%= form_with(model: property, local: true) do |form| %>
  

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rooms %>
    <%= form.number_field :rooms, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :bathrooms %>
    <%= form.number_field :bathrooms, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :parking_spaces %>
    <%= form.number_field :parking_spaces, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :for_sale %>
    <%= form.select :for_sale, options_for_select({"Yes" => true, "No" => "false"}, @property.for_sale), class: "form-control" %>
  </div>

  <div class="form-group">
    <% options = @property.for_sale? ? {"Avaliable" => "avaliable", "Sold" => "sold"} : {"Avaliable" => "avaliable", "Leased" => "leased"}  %>
    <%= form.label :status %>
    <%= form.select :status, options_for_select(options, @property.status), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :avaliable_date %>
    <%= form.date_field :avaliable_date, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :photo %>
    <%= form.file_field :photo, accept: 'image/png, image/jpg, image/jpeg' %>

    <% if @property.photo.present? %>
      <%= image_tag @property.photo, :class => "mt-4 w-25" %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Save Property", :class => "btn btn-success mt-2" %>
  </div>
<% end %>
