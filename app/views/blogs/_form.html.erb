<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert">
        <%= message %></li>
      </div>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :summary %>
    <%= form.text_field :summary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, accept: 'image/png, image/jpg, image/jpeg', class: "form-control" %>
    <% if @blog.image.present? %>
      <%= image_tag @blog.image, :class => "mt-4 w-25" %>
    <% end %>
  </div>

  <div class="form-check">
    <%= form.check_box :active, class: "form-check-label" %>
    <%= form.label  class: "form-check-input" do%>
      Public
    <% end %>
  </div>

  
  
    <%= form.submit "Save Property", :class => "btn btn-success mt-2" %>

<% end %>





  

