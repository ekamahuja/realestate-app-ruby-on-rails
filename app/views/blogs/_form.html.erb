<%= form_with(model: blog, local: true) do |form| %>

  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert">
        <%= message %></li>
      </div>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :url %>
    <%= form.text_field :url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :summary %>
    <%= form.text_field :summary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, accept: 'image/png, image/jpg, image/jpeg' %>

    <% if @blog.image.present? %>
      <%= image_tag @blog.image, :class => "mt-4" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :active %>
    <%= form.check_box :active, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
