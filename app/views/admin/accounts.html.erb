<h2>Accounts</h2>

<% @accounts.each do |account| %>
    <div class="row">
        <div class="col-sm-2">
            <%= account.full_name %>
        </div>
        <div class="col-sm-2">
            <%= account.email %>
        </div>
        <div class="col-sm-2">
            <%= account.role.capitalize %>
        </div>
        <div class="col-sm-2">
            <%= account.created_at.strftime("%d/%m/%y") %>
        </div>
        <div class="col-sm-2">
            <%= link_to "View profile", profile_path(account.id) %>
        </div>
    </div>
<% end %>