<div class="property-main-image" style="background-image: url('<%= property_photo_url(@properties.last) %>')">
  <div class="property-image-overlay"></div>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-lg-6">
        <p class="mb-0 fw-bold"><%= @account.full_name %></p>
          <p class="mb-2"><%= @account.company_name %></p>

        </div>
        <div class="col-lg-6 text-center ">
        <div class="row mr-lg-3 mt-sm-3 bg-light p-2 rounded">
            <div class="col-3">
              <i class="fas fa-bed"></i>
              <span class="lead"><%= @properties_sold %> Sold</span>
            </div>
            <div class="col-3">
              <i class="fas fa-bed"></i>
              <span class="lead"><%= @properties_for_sale %> For Sale</span>
            </div>
            <div class="col-3">
              <i class="fas fa-shower"></i>
              <span class="lead"><%= @property_leased %> Leased</span>
            </div>
            <div class="col-3">
              <i class="fas fa-car"></i>
              <span class="lead"><%= @property_for_rent %> Active </span>
            </div>
          </div>
        </div>
      </div>

      <div class="row border-top border-bottom pt-3 pb-3 mb-4 mt-4">
        <div class="col-6">
            Properties
        </div>
        <div class="col-6">
          <i class="fas fa-hand-holding-usd text-success"></i> <%= link_to "Can I afford this property?", "#", class:"text-decoration-none text-success fw-bold" %>
        </div>
      </div>

      <div class="row">
       <div class="col">
        <p class="h5">Project Overview</p>
        <div id="description-wrapper" class="">
          <%= simple_format @account.description %>
        </div>
        <button class="btn btn-outline-success mt-3" id="toggleDescriptionBtn">Read more</button>
        <% if @property.for_sale? %>
          <p class="mt-5">The esstimated monthly payments are based on a 30 year mortgage with 20% down and no interest rate %.*</p>
        <% end %>
        </div>
      </div>     
    </div>
    <div class="col-md-4">
      <%= render '/properties/etc/agent_details', agent: @account %>
      <iframe
        class="ml-lg-4 mt-3"
        width="320"
        height="240"
        style="border:0"
        loading="lazy"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCfIqZFuB7d1yDzBmghQ5MeDis-uPvF8HY&q=<%= @property.address.to_param %>">
    </iframe>
    </div>
  </div>
</div>

<section class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <p class="h4 mb-4">Other properties from <%= @agent.company_name %></p>
      </div>
      <%= render "properties/etc/list_properties", properties: @properties %>
    </div>
  </div>
</section>


<%= render "properties/etc/email_agent" %>