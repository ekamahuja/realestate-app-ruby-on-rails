<style>
.glyphicon {
  float: right;
  margin-top: 2px;
  margin-right: -6px;
}
</style>

<div class="panel panel-default">
<div class="col-lg-6">
  <div id="mail">
    <h1 class="panel-heading">All Conversations:</h1>
    <div class="panel-body">
     <div class="item">
      <% @conversations.each do |conversation| %>
      <% if conversation.sender_id == current_account.id || conversation.recipient_id == current_account.id %>
       <% if conversation.sender_id == current_account.id %>
         <% recipient = Account.find(conversation.recipient_id) %>
       <% else %>
         <% recipient = Account.find(conversation.sender_id) %>
       <% end %>
       <h3><%= link_to recipient.email, conversation_messages_path(conversation)%></h3>
      <% end %>
     <% end %>
     </div>
    </div>
   </div>
</div>
</div>