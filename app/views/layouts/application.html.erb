<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Basic Page Info -->
    <title>Realestate Application</title>
    <!-- CSRF -->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Custom StyleSheet -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Custom JavaScript -->
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  </head>
  <body id="<%= controller.controller_name%>" class="<%= controller.action_name %>">
    <!-- Content -->
    <!-- NavBar -->
    <% if ['public', 'devise', 'sessions', 'registrations'].include?(controller.controller_name) %>
      <%= render 'layouts/etc/navbar/public' %>
      <div class="container">
        <%= yield %>
      </div>
    <% else %>
    <!-- Main -->
      <%= render "layouts/etc/navbar/dashboard" %>
      <div class="container-fluid">
        <div class="row">
          <%= render 'layouts/etc/navbar/sidebar' %>
          <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <%= yield %>
          </main>
        </div>
      </div>
      
    <% end %>
    
      <!-- Notice -->
      <p id="notifications"><%= notice %></p>

    <!-- Footer -->
    <%= render 'layouts/etc/footer/default' %>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist///creativelayers.net/themes/houzing-html/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> 
  </body>
</html>